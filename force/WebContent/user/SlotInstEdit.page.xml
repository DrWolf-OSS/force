<!--   </navigation>-->

   <navigation from-action="#{slotInstHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/SlotInst.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{slotInstHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/home.xhtml"/>
      </rule>
   </navigation>
   
