<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/DocInstList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{docInstHome.wire}"/>

   <param name="docInstFrom"/>
   <param name="docInstId" value="#{docInstHome.docInstId}"/>
   <param name="docInstCollectionFrom"/>
   <param name="docInstCollectionId" value="#{docInstCollectionHome.docInstCollectionId}"/>
   <param name="docDefCollectionFrom"/>
   <param name="docDefCollectionId" value="#{docDefCollectionHome.docDefCollectionId}"/>
   <param name="docDefFrom"/>
   <param name="docDefId" value="#{docDefHome.docDefId}"/>

   <param name="slotDefFrom"/>
   <param name="slotDefId" value="#{slotDefHome.slotDefId}"/>


   <param name="slotInstFrom"/>
   <param name="slotInstId" value="#{slotInstHome.slotInstId}"/>




   <navigation from-action="#{docInstHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/DocInst.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{docInstHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/DocInst.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{docInstHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/DocInstList.xhtml"/>
      </rule>
   </navigation>

</page>
